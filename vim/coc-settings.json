{
  "codeLens.enable": true,
  "languageserver": {
    "elixirLS": {
      "command": "~/Projects/source/elixir-ls/release/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
    },
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        "stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  }
}
